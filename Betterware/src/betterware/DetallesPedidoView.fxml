<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="betterware.controllers.DetallesPedidoController">

    <!-- ================= TÍTULO ================= -->
    <top>
        <Label text="Detalles del Pedido"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- ========== CONTENIDO CENTRAL ========== -->
    <center>
        <VBox spacing="15" padding="20">

            <!-- ==== INFO DEL PEDIDO ==== -->
            <GridPane hgap="12" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <Label text="ID Pedido:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblIdPedido" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblCliente" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Código:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="lblCodigo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Fecha:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="lblFecha" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            </GridPane>

            <!-- ==== TABLA ==== -->
            <TableView fx:id="tablaDetalles" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colProducto" text="Producto" prefWidth="200"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- ==== TOTAL ==== -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="TOTAL:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblTotal" style="-fx-font-size: 18px; -fx-text-fill: darkgreen;"/>
            </HBox>

        </VBox>
    </center>

    <!-- ========== PIE DE PÁGINA ========== -->
    <bottom>
        <HBox padding="15" alignment="CENTER_RIGHT">
            <Button text="Cerrar"
                    fx:id="btnCerrar"
                    style="-fx-font-size: 14px;"
                    onAction="#cerrarVentana"/>
        </HBox>
    </bottom>

</BorderPane>


