<AnchorPane id="AnchorPane" prefHeight="710.0" prefWidth="780.0"
            style="-fx-background-color: #00B0C8;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="betterware.controllers.PedidoController">

   <children>
      <BorderPane prefHeight="651.0" prefWidth="778.0">

         <bottom>
            <GridPane prefHeight="710.0" prefWidth="778.0" BorderPane.alignment="CENTER">

               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="255.2" minWidth="10.0" prefWidth="11.8" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="720.0" minWidth="10.0" prefWidth="720.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.2" minWidth="7.8" prefWidth="7.8" />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints maxHeight="129.2" minHeight="0.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="610.2" minHeight="10.0" prefHeight="596.6" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="52.2" minHeight="10.0" prefHeight="38.4" vgrow="SOMETIMES" />
               </rowConstraints>

               <children>

                  <Text fill="WHITE" text="Información del Pedido"
                        strokeType="OUTSIDE" strokeWidth="0.0"
                        textAlignment="CENTER" wrappingWidth="682.59"
                        GridPane.columnIndex="1">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Text>

                  <Pane prefHeight="600.0" prefWidth="721.0"
                        style="-fx-background-color: #00B0C8; -fx-border-color: white;"
                        GridPane.columnIndex="1" GridPane.rowIndex="1">

                     <children>

                        <TextField fx:id="txtTotal" editable="false"
                                   layoutX="336.0" layoutY="536.0"
                                   prefHeight="36.0" prefWidth="218.0" />

                        <Text fill="WHITE" layoutX="220.0" layoutY="562.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text=" Total" textAlignment="CENTER"
                              wrappingWidth="107.86">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Text>

                        <Text fill="WHITE" layoutX="24.0" layoutY="36.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Distribuidora: Rosa Elena Hernández Barrios">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <Text fill="WHITE" layoutX="24.0" layoutY="96.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Cliente:">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <Text fill="WHITE" layoutX="461.0" layoutY="35.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Contacto: 2281XXXXXX">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <Text fill="WHITE" layoutX="398.0" layoutY="97.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Telefono Cliente:">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <Text fill="WHITE" layoutX="394.0" layoutY="152.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Fecha Solicitud:">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <Text fill="WHITE" layoutX="25.0" layoutY="148.0"
                              strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Fecha Entrega:">
                           <font><Font size="21.0" /></font>
                        </Text>

                        <!-- CAMPOS CORREGIDOS -->
                        <TextField fx:id="txtCliente" layoutX="95.0" layoutY="76.0"
                                   prefHeight="25.0" prefWidth="284.0" />

                        <TextField fx:id="txtTelefono" layoutX="560.0" layoutY="76.0"
                                   prefWidth="180.0" />

                        <Line endX="581.8" endY="0.0" layoutX="115.0" layoutY="57.0"
                              startX="-100.0" stroke="WHITE" />

                        <TableView fx:id="tablaPedido"
                                   layoutX="38.0" layoutY="181.0"
                                   prefHeight="332.0" prefWidth="516.0">

                           <columns>
                              <TableColumn fx:id="colId" prefWidth="92.0" text="ID" />
                              <TableColumn fx:id="colNombre" prefWidth="134.4" text="NOMBRE" />
                              <TableColumn fx:id="colCantidad" prefWidth="136.8" text="CANTIDAD" />
                              <TableColumn fx:id="colPrecio" prefWidth="148.8" text="PRECIO" />
                           </columns>

                        </TableView>

                        <Button fx:id="btnAgregarFila"
                                layoutX="578.0" layoutY="279.0"
                                onAction="#agregarProductoDesdeBoton"
                                prefHeight="56.0" prefWidth="110.0"
                                text="Agregar Producto" />

                        <Button fx:id="btnEliminarFila"
                                layoutX="578.0" layoutY="354.0"
                                onAction="#eliminarFilaSeleccionada"
                                prefHeight="56.0" prefWidth="110.0"
                                text="Eliminar Producto" />

                        <!-- CAMPOS DE FECHAS CON fx:id -->
                        <DatePicker fx:id="fechaEntrega" layoutX="169.0" layoutY="131.0" />
                        <DatePicker fx:id="fechaSolicitud" layoutX="542.0" layoutY="133.0" />

                     </children>
                  </Pane>

                  <Pane prefHeight="15.0" prefWidth="721.0"
                        GridPane.columnIndex="1" GridPane.rowIndex="2">

                     <children>
                        <Button fx:id="GuardarEdit"
                                layoutX="565.0" layoutY="7.0"
                                prefHeight="32.0" prefWidth="142.0"
                                text="Guardar"
                                onAction="#guardarPedido" />

                        <Button fx:id="CancelarBoton"
                                layoutX="397.0" layoutY="7.0"
                                prefHeight="32.0" prefWidth="142.0"
                                text="Cancelar"
                                onAction="#CancelarBton" />
                     </children>

                  </Pane>

               </children>
            </GridPane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>

